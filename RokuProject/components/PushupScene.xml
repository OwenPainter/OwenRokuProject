<?xml version="1.0" encoding="utf-8" ?>
<component name="PushupScene" extends="Scene">
    <interface>
        <field id="nextScene" type="string" />
    </interface>
    <script type="text/brightscript" uri="pkg:/components/PushupScene.brs" />

    <children>
        <Label
            id="counterLabel"
            text="Push-ups: 0"
            translation="[500, 300]"
            color="0xFFFFFFFF"
        />
        <Timer
            id="pushupTimer"
            repeat="true"
            duration="2"
        />
        <Audio id="audioPlayer" />
        <Video
            id="cornerVideo"
            translation="[100, 50]"
            width="400"
            height="300"
            visible="true"
            loop="true"
        />
    </children>
</component>